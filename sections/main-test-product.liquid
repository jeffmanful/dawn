<h2>{{ product.title }}</h2>

<img src="{{ product.featured_image | image_url }}>

{% if section.settings.show_reviews %}
<h4>&#11088; &#11088; &#11088; &#11088; &#11088;</h4>
{% endif %}

<h4>{{ section.settings.tax_notice }}</h4>

{% schema %}
{
  "name": "main test product",
  "settings": [
    {
      "id": "tax_notice",
      "type": "text",
      "label": "Tax notice"
    },
    {
      "id": "show_reviews",
      "type": "checkbox",
      "label": "Show reviews"
    }
  ]
}
{% endschema %}
